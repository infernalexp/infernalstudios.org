{
  "name": "infernalstudios.org",
  "version": "1.0.0",
  "private": true,
  "description": "Source code for <https://infernalstudios.org>!",
  "bugs": "https://github.com/infernalexp/infernalstudios.org/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/infernalexp/infernalstudios.org.git"
  },
  "license": "ARR",
  "author": {
    "name": "Infernal Studios",
    "email": "contact@infernalstudios.org",
    "url": "https://infernalstudios.org"
  },
  "contributors": [
    {
      "name": "Kārlis Čerņavskis",
      "email": "contact@cernavskis.dev",
      "url": "https://cernavskis.dev"
    }
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn build:only",
    "build:only": "tsc",
    "build:watch": "tsc -w",
    "predocs": "node scripts/clearDirectory.js docs",
    "docs": "redoc-cli bundle spec/api.yml --dereferenced --ext yml --lint --output docs/index.html --title \"Infernal Studios API\"",
    "postdocs": "node scripts/postdocs.js docs/index.html",
    "docs:lint": "redoc-cli lint spec/api.yml",
    "format:check": "prettier --config .prettierrc.json --check spec src public *.json .*.json scripts",
    "format": "prettier --config .prettierrc.json --write spec src public *.json .*.json scripts",
    "lint:fix": "eslint src --fix",
    "lint": "eslint src",
    "prebuild": "yarn format:check && yarn lint",
    "prepare": "husky install",
    "start": "node .",
    "start:dev": "nodemon --delay 2 -w \"dist\" -x \"clear && yarn start\" & yarn build:watch"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "knex": "^0.95.15",
    "logerian": "^1.1.1",
    "pg": "^8.7.1",
    "semver": "^7.3.5",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.12",
    "@types/morgan": "^1.9.3",
    "@types/node": "^15.12.2",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "prettier-package-json": "^2.6.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "redoc-cli": "^0.13.2",
    "typescript": "~4.5.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0"
  }
}

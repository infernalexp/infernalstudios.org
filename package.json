{
  "name": "infernalstudios.org",
  "version": "1.0.0",
  "private": true,
  "description": "Source code for <https://infernalstudios.org>!",
  "bugs": "https://github.com/infernalexp/infernalstudios.org/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/infernalexp/infernalstudios.org.git"
  },
  "license": "ARR",
  "author": {
    "name": "Infernal Studios",
    "email": "contact@infernalstudios.org",
    "url": "https://infernalstudios.org"
  },
  "contributors": [
    {
      "name": "Kārlis Čerņavskis",
      "email": "contact@cernavskis.dev",
      "url": "https://cernavskis.dev"
    }
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn build:only && yarn build:post",
    "build:only": "tsc",
    "build:post": "node scripts/postbuild.js",
    "build:watch": "tsc -w & nodemon -w \"dist\" -e \"js map\" -x \"yarn postbuild\"",
    "format:check": "prettier --config .prettierrc.json --check src *.json .*.json",
    "format": "prettier --config .prettierrc.json --write src *.json .*.json",
    "lint:fix": "eslint src --fix",
    "lint": "eslint src",
    "prebuild": "npm run format:check && npm run lint",
    "prepare": "husky install",
    "start": "node .",
    "start:dev": "nodemon -w \"dist\" -x \"yarn start\" & yarn build:watch"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "logerian": "^1.0.4",
    "morgan": "^1.10.0",
    "patchdb": "^1.0.2",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.12",
    "@types/morgan": "^1.9.3",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "prettier-package-json": "^2.6.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.5.0-dev.20211007"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0"
  }
}
